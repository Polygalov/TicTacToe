<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView1"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textStyle="normal|bold"
            android:gravity="center"/>

        <TextView
            android:text="Побед"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textStyle="normal|bold"
            android:gravity="center"
            android:layout_marginLeft="4dp"/>

        <TextView
            android:text="Неудач"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textStyle="normal|bold"
            android:gravity="center"
            android:layout_marginLeft="2dp"/>

        <TextView
            android:text="Ничьих"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textStyle="normal|bold"
            android:gravity="center"/>
    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="1"
        android:rowCount="20"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Легко 1й"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView61"
                android:layout_weight="1"
                android:gravity="left"
                android:textStyle="normal|bold"
                android:textColor="@android:color/holo_green_dark"/>

            <TextView
                android:text="15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/score_easy_x_win"
                android:layout_weight="1"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="@android:color/holo_green_dark"/>
            <TextView
                android:text="15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/score_easy_x_lose"
                android:layout_weight="1"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="@android:color/holo_green_dark"/>

            <TextView
                android:text="450"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/score_easy_x_draw"
                android:layout_weight="1"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="@android:color/holo_green_dark"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Трудно 1й"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView62"
                android:layout_weight="1"
                android:gravity="left"
                android:textStyle="normal|bold"
                android:textColor="@android:color/holo_red_dark"/>

            <TextView
                android:text="15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/score_hard_x_win"
                android:layout_weight="1"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="@android:color/holo_red_dark"/>
            <TextView
                android:text="15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/score_hard_x_lose"
                android:layout_weight="1"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="@android:color/holo_red_dark"/>

            <TextView
                android:text="450"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/score_hard_x_draw"
                android:layout_weight="1"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="@android:color/holo_red_dark"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Легко 2й"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView63"
                android:layout_weight="1"
                android:gravity="left"
                android:textStyle="normal|bold"
                android:textColor="@android:color/holo_blue_light"/>

            <TextView
                android:text="15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/score_easy_0_win"
                android:layout_weight="1"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="@android:color/holo_blue_light"/>
            <TextView
                android:text="15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/score_easy_0_lose"
                android:layout_weight="1"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="@android:color/holo_blue_light"/>

            <TextView
                android:text="450"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/score_easy_0_draw"
                android:layout_weight="1"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="@android:color/holo_blue_light"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Трудно 2й"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView64"
                android:layout_weight="1"
                android:gravity="left"
                android:textStyle="normal|bold"
                android:textColor="@android:color/holo_purple"/>

            <TextView
                android:text="15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/score_hard_0_win"
                android:layout_weight="1"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="@android:color/holo_purple"/>
            <TextView
                android:text="15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/score_hard_0_lose"
                android:layout_weight="1"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="@android:color/holo_purple"/>

            <TextView
                android:text="450"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/score_hard_0_draw"
                android:layout_weight="1"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="@android:color/holo_purple"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp">

            <TextView
                android:text="Всего"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                android:layout_weight="1"
                android:gravity="left"
                android:textStyle="normal|bold"
                android:textColor="@android:color/black"
                />

            <TextView
                android:text="15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/score_total_win"
                android:layout_weight="1"
                android:textAlignment="center"
                android:gravity="center"
                android:textStyle="normal|bold"
                android:textColor="@android:color/black"/>
            <TextView
                android:text="15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/score_total_lose"
                android:layout_weight="1"
                android:textAlignment="center"
                android:gravity="center"
                android:textStyle="normal|bold"
                android:textColor="@android:color/black"/>

            <TextView
                android:text="450"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/score_total_draw"
                android:layout_weight="1"
                android:textAlignment="center"
                android:gravity="center"
                android:textStyle="normal|bold"
                android:textColor="@android:color/black"/>
        </LinearLayout>


    </GridLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">
        <Button
            android:id="@+id/btnRestart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/restart"
            android:layout_weight="1"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp">
        </Button>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/btnExit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/exit"
            android:layout_weight="1"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp">
        </Button>

    </LinearLayout>
</LinearLayout>